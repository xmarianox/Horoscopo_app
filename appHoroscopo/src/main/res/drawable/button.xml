<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#527E7C"
                      android:endColor="#69A19E"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#09455C" />

            <corners android:radius="6dp"/>

            <padding android:left="10dp"
                     android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp" />
        </shape>
    </item><!-- Estado presionado  -->

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#527E7C"
                      android:endColor="#69A19E"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#09455C" />

            <corners android:radius="6dp"/>

            <padding android:left="10dp"
                     android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp" />
        </shape>
    </item><!-- Estado on focus  -->

    <item>
        <shape>
            <gradient android:startColor="#69A19E"
                      android:endColor="#527E7C"
                      android:angle="270" />

            <stroke android:width="1px"
                    android:color="#09455C" />

            <corners android:radius="6dp" />

            <padding android:left="10dp"
                     android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp" />
        </shape>
    </item><!-- Estado por default  -->

</selector>